<!--pages/runner_food/index.wxml-->

<mp-cells ext-class="my-cells" title="外卖单详细情况">

    <mp-cell>
        <view>单号</view>
        <view slot="footer" >{{sExpress[0]._id}}</view>
    </mp-cell>

    <mp-cell>
        <view>原短信</view>
        <view slot="footer" style="height:200rpx">{{sExpress[0].express.msg}}</view>
    </mp-cell>

    <mp-cell>
        <view>取件点</view>
        <view slot="footer">{{sExpress[0].express.source_point}}</view>
    </mp-cell>

    <mp-cell>
        <view>取件码</view>
        <view slot="footer">{{sExpress[0].express.code}}</view>
    </mp-cell>

    <mp-cell>
        <view>送达地点</view>
        <view slot="footer">{{sExpress[0].express.place}}</view>
    </mp-cell>

    <mp-cell>
        <view>下单时间</view>
        <view slot="footer">{{sExpress[0].create_time}}</view>
    </mp-cell>
    
    <mp-cell wx:if="{{sExpress[0].state==2||sExpress[0].state==3}}">
        <view>完成时间</view>
        <view slot="footer">{{sExpress[0].complete_time}}</view>
    </mp-cell>

    <mp-cell>
        <view>备注</view>
        <view slot="footer">{{sExpress[0].express.remarks}}</view>
    </mp-cell>

    <mp-cell>
        <view>派单人姓名</view>
        <view slot="footer">{{sExpress[0].express.name}}</view>
    </mp-cell>

    <mp-cell>
        <view>派单人号码</view>
        <view slot="footer">{{sExpress[0].express.phone}}</view>
    </mp-cell>

    <mp-cell>
        <view>押金</view>
        <view slot="footer">{{sExpress[0].express.deposit}}</view>
    </mp-cell>

    <mp-cell>
        <view>悬赏金额</view>
        <view slot="footer">{{sExpress[0].express.reward_amount}}</view>
    </mp-cell>

    <mp-cell wx:if="{{sExpress[0].state==0}}">
        <view>状态</view>
        <view slot="footer">无人接单</view>
    </mp-cell>

    <view wx:if="{{sExpress[0].state==1}}">
        <mp-cell >
            <view>状态</view>
            <view slot="footer">有人接单</view>
        </mp-cell>
        <mp-cell >
            <view>接单人姓名</view>
            <view slot="footer">{{sExpress[0].accept_name}}</view>
        </mp-cell>
        <mp-cell >
            <view>接单人号码</view>
            <view slot="footer">{{sExpress[0].accept_phone}}</view>
        </mp-cell>
    </view>

    <view wx:if="{{sExpress[0].state==2}}">
        <mp-cell >
            <view>状态</view>
            <view slot="footer">已送达，跑跑完成订单，待支付</view>
        </mp-cell>
        <mp-cell >
            <view>接单人姓名</view>
            <view slot="footer">{{sExpress[0].accept_name}}</view>
        </mp-cell>
        <mp-cell >
            <view>接单人号码</view>
            <view slot="footer">{{sExpress[0].accept_phone}}</view>
        </mp-cell>
    </view>

    <view wx:if="{{sExpress[0].state==3}}">
        <mp-cell >
            <view>状态</view>
            <view slot="footer">已完成支付</view>
        </mp-cell>
        <mp-cell >
            <view>接单人姓名</view>
            <view slot="footer">{{sExpress[0].accept_name}}</view>
        </mp-cell>
        <mp-cell >
            <view>接单人号码</view>
            <view slot="footer">{{sExpress[0].accept_phone}}</view>
        </mp-cell>
    </view>

    <view wx:if="{{sExpress[0].state==4}}">
        <mp-cell >
            <view>状态</view>
            <view slot="footer">已取消订单</view>
        </mp-cell>

    </view>


</mp-cells>

