<!--pages/sponsor_list/index.wxml-->



<view class="container" >
  <form bindsubmit="formSubmit">
      <view class="weui-cells__title">派单-快递</view>
      <view class="weui-cells weui-cells_after-title">

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">姓名</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" name='name' value='{{form.name}}' placeholder="请输入姓名" />
          </view>
        </view>

        <view class="weui-cell weui-cell_input weui-cell_vcode">
          <view class="weui-cell__hd">
            <view class="weui-label">手机号</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" name='phone' type='number' value='{{form.phone}}' placeholder="请输入手机号" />
          </view>
          </view>

          <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">原短信</view>
          </view>
          <view class="weui-cell__bd">
            <textarea name="msg"  class="weui-textarea" cols="30" rows="10"  value='{{form.msg}}' placeholder="例：【菜鸟驿站】你的百世快递包裹已到广东科技学院南门菜鸟驿站，请17:00前凭66-6-6666尽早取。询13888888888"></textarea>
          </view>
        </view>

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">取件点</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" name='source_point' value='{{form.source_point}}' placeholder="例：广东科技学院南门菜鸟驿站" />
          </view>
        </view>

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">取件码</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" name='code' value='{{form.code}}' placeholder="例：66-6-6666，没有写0" />
          </view>
        </view>

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">送达地点</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" name='place' value='{{form.place}}' placeholder="例：南10-666" />
          </view>
        </view>

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">备注</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" name='remarks'  placeholder="（可不填）例：顺便买瓶可乐" />
          </view>
        </view>

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">押金</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" name='deposit' type="number" value='{{form.deposit}}' placeholder="例：1" />
          </view>
        </view>

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">悬赏金额</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" name='reward_amount' type="number" value='{{form.reward_amount}}' placeholder="例：1" />
          </view>
        </view>

      </view>

      <view class="btn-area">
        <button plain="true" type="primary" formType="submit">提交</button>
        <button plain="true" formType="reset">清除</button>

        
      </view>
  </form>
</view>

